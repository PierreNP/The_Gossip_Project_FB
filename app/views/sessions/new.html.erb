<h1>Connexion</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>


<%= form_with model:@new_session, url: sessions_path, method: :post, local:true do |form| %>
  <div class = "form-group">
    <%= label_tag 'Email' %>
    <%= form.text_field :email, class:'form-control'%>
  </div>
  <div class = "form-group">
    <%= label_tag 'Mot de passe' %>
    <%= form.text_field :password, class:'form-control'%>
  </div>
  <%= form.submit "connexion" %>
  <%end%>
</div>